# ~/.config/ruby/irbrc
# IRB (Interactive Ruby) configuration
# Usage: export IRBRC=~/.config/ruby/irbrc

require 'irb/completion'

IRB.conf[:USE_READLINE] = true
IRB.conf[:AUTO_INDENT] = true
IRB.conf[:USE_LOADER] = false

# History file in XDG
history_dir = File.expand_path('~/.local/share/ruby')
Dir.mkdir(history_dir) unless Dir.exist?(history_dir)
IRB.conf[:HISTORY_FILE] = File.join(history_dir, 'irb_history')

# Prompt
IRB.conf[:PROMPT_MODE] = :DEFAULT
